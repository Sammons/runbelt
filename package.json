    "configuration": {
      "properties": {
        "runbelt.bin": {
          "type": "string",
          "default": "/bin/sh",
          "description": "Location of binary used to invoke runbelt commands"
        },
        "runbelt.cmd01": {
          "type": "object",
          "description": "Runbelt Slot",
          "required": [
            "location"
          ],
          "properties": {
            "location": {
              "type": "string",
              "description": "Location of runbelt command file",
              "default": "~/.runbelt/cmd.sh"
            },
            "cwd": {
              "type": "string",
              "description": "shell=false only, shells always run in working directory. In relative pathing . is ${workdir}",
              "default": "."
            },
            "name": {
              "type": "string",
              "description": "Vanity name of the command",
              "default": ""
            },
            "shell": {
              "type": "boolean",
              "default": false,
              "description": "Dumps command file into an integrated terminal running 'bin'"
            },
            "focus": {
              "type": "boolean",
              "default": false,
              "description": "Focus output on execution, defaults to false"
            },
            "show": {
              "type": "boolean",
              "default": true,
              "description": "Show output in an output pane, defaults to true"
            },
            "customArgs": {
              "type": "boolean",
              "default": false,
              "description": "Only when shell=false, Prompts for custom arguments (inserted before static args), defaults to false"
            },
            "args": {
              "type": "array",
              "description": "Only when shell=false, List of arguments to pass to the command",
              "items": {
                "type": "string",
                "default": ""
              }
            }
